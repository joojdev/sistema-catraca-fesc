generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tag {
  user_id Int @id
  credential Int @unique
  released Boolean
  status String
  admin Boolean

  classes Class[]
  accesses Access[]

  @@map("tag")
  @@index(credential)
}

model Class {
  start Int
  end Int
  tag_user_id Int

  tag Tag @relation(fields: [tag_user_id], references: [user_id])

  @@id([start, end, tag_user_id])

  @@map("class")
}

model Access {
  id Int @id @default(autoincrement())
  timestamp DateTime
  tag_user_id Int

  tag Tag @relation(fields: [tag_user_id], references: [user_id])

  @@map("access")
}